<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">#000</item>
    </style>
    
    <!-- Un style d'élément utilise les mêmes propriétés que
    l'élément le ferait autrement, mais la syntaxe est légèrement
    différente. On notera l'existence d'un parent au style,
    ce qui permet à plusieurs styles d'hériter les propriétés
    d'un autre style. Une bonne structure de styles
    permettra donc de réutiliser au maximum les mêmes définitions. -->
    <style name="dayDataStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAA</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">4dp</item>
	</style>
	
    <style name="dayDataMoreStyle" parent="@style/dayDataStyle">
        <item name="android:textSize">16sp</item>
	</style>

</resources>